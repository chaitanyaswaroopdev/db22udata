extends layout

block content
  div(class="row m-2")
  h1(class="col-sm-10")= title
  a(href = "restaurant/create" class="btn bg-dark text-white col-sm-2") Create
  |  

  - const restaurant = ['Room_type','Duration','Cost']
  //- let items = [] 
  - let items = results; 
  - let o;
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
   } 

  div(class='container-fluid')
    div(class="d-flex justify-content-end")

    div(class="p-3 mb-2 bg-dark text-white row")
      each item in restaurant 
        div(class="col-sm-2") #{item} :

    
    each o, index in items 
        div(class="p-3 mb-2 bg-dark text-white row" onclick='buy('+index+')')
          div(class='col-sm-2') #{o.restaurant_type}
          div(class='col-sm-2') #{o.duration}
          div(class='col-sm-2') $ #{o.cost}
          div(class='col-sm-6')
            //- div(class='col-sm-3' onclick='buy('+index+')') #{o} 
            a(href = "restaurant/detail/?id=" + o._id)    detail --
            a(href = "restaurant/update/?id=" + o._id)    update --
            a(href = "restaurant/delete/?id=" + o._id)    delete
        

  
        